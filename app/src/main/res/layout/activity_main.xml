<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingRight="10dp"
        android:textSize="50dp"
        android:gravity="right"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_c"
            style="@style/button_func_style"
            android:text="C" />
        <Button
            android:id="@+id/button_plmin"
            style="@style/button_func_style"
            android:text="+/-"/>
        <Button
            android:id="@+id/button_procent"
            style="@style/button_func_style"
            android:text="%"/>
        <Button
            android:id="@+id/button_bolu"
            style="@style/button_func_style"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_7"
            style="@style/button_number_style"
            android:text="7" />
        <Button
            android:id="@+id/button_8"
            style="@style/button_number_style"
            android:text="8"/>
        <Button
            android:id="@+id/button_9"
            style="@style/button_number_style"
            android:text="9"/>
        <Button
            android:id="@+id/button_x"
            style="@style/button_func_style"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_4"
            style="@style/button_number_style"
            android:text="4" />
        <Button
            android:id="@+id/button_5"
            style="@style/button_number_style"
            android:text="5"/>
        <Button
            android:id="@+id/button_6"
            style="@style/button_number_style"
            android:text="6"/>
        <Button
            android:id="@+id/button_min"
            style="@style/button_func_style"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_1"
            style="@style/button_number_style"
            android:text="1" />
        <Button
            android:id="@+id/button_2"
            style="@style/button_number_style"
            android:text="2"/>
        <Button
            android:id="@+id/button_3"
            style="@style/button_number_style"
            android:text="3"/>
        <Button
            android:id="@+id/button_plus"
            style="@style/button_func_style"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_0"
            style="@style/button_number_style"
            android:text="0" />
        <Button
            android:id="@+id/button_tochka"
            style="@style/button_number_style"
            android:text="."/>
        <Button
            android:id="@+id/button_probel"
            style="@style/button_number_style"
            android:text=" "/>
        <Button
            android:id="@+id/button_equal"
            style="@style/button_func_style"
            android:text="="/>

    </LinearLayout>

</LinearLayout>